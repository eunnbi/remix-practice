{
  "name": "@remix-practice/design-system",
  "version": "1.0.0",
  "types": "./dist/components.d.ts",
  "main": "./dist/components.cjs.js",
  "module": "./dist/components.es.js",
  "exports": {
    ".": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.es.js",
      "require": "./dist/components.cjs.js"
    },
    "./styles": {
      "types": "./dist/styles.d.ts",
      "import": "./dist/styles.es.js",
      "require": "./dist/styles.cjs.js"
    },
    "./theme.css": "./dist/theme.css.ts.css",
    "./reset.css": "./dist/reset.css"
  },
  "sideEffects": ["*.css"],
  "type": "module",
  "scripts": {
    "build": "vite build",
    "format": "biome format --write ./src",
    "lint": "eslint --ignore-pattern .gitignore --cache --cache-location ./node_modules/.cache/eslint ./src",
    "typecheck": "tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/vite-plugin": "^4.0.19",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "@remix-practice/eslint-config": "workspace:*",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-libcss": "^1.1.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "react": ">= 19",
    "react-dom": ">= 19"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "clsx": "^2.1.1"
  }
}
