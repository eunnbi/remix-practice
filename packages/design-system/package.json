{
  "name": "@remix-practice/design-system",
  "version": "1.0.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./theme.css": "./dist/assets/theme.css.ts.css",
    "./reset.css": "./dist/assets/styles/reset.css"
  },
  "files": ["dist"],
  "sideEffects": ["**/*.css"],
  "scripts": {
    "build": "vite build",
    "format": "biome format --write ./src",
    "lint": "eslint --ignore-pattern .gitignore --cache --cache-location ./node_modules/.cache/eslint ./src",
    "typecheck": "tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@remix-practice/eslint-config": "workspace:*",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/vite-plugin": "^4.0.19",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "glob": "^11.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-lib-inject-css": "^2.2.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "react": ">= 19",
    "react-dom": ">= 19"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "clsx": "^2.1.1"
  }
}
